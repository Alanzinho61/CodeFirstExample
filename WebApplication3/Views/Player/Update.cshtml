@model WebApplication3.Models.Player
@{
    ViewData["Title"] = "Update";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Update</h1>

<form action="/Player/Update" method="post">

    <input type="hidden" name="Id" value="@Model.Id" />


    <input type="text" name="PlayerName" value="@Model.PlayerName" placeholder="Ismi" /> <br /> <br />
    <input type="text" name="Team" value="@Model.Team" placeholder="Takimi" /> <br /> <br />
    <input type="text" name="Age" value="@Model.Age" placeholder="Yasi" /> <br /> <br />
    <input type="text" name="Position" value="@Model.Position" placeholder="Mevkii" /> <br /> <br />
    <input type="text" name="Number" value="@Model.Number" placeholder="Numarasi" /> <br /> <br />

    <input type="submit" value="Update" class="btn btn-success" />

</form>